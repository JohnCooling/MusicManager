<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title | Music Manager</title>

    <!-- Stylesheets -->
    <link href="~/Content/MasterCSS/normalize.css" rel="stylesheet" />
    <link href="~/Content/bootstrap/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/MasterCSS/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/CustomStyling/musicmanager.css" rel="stylesheet" />

    <!-- JavaScript -->
    <script src="~/Content/JQuery/jquery-1.11.0.js"></script>
    <script src="~/Content/JavaScript/bootstrap.js"></script>
    <script src="~/Content/JavaScript/jquery.elevateZoom-3.0.8.min.js"></script>
    <script src="~/Content/JavaScript/jquery.elevatezoom.js"></script>

    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/noty/jquery.noty.js"></script>
    <script src="~/Scripts/noty/layouts/top.js"></script>
    <script src="~/Scripts/noty/themes/bootstrap.js"></script>

    <script src="~/Scripts/jquery.signalR-2.1.2.min.js"></script>

    <!--Reference the autogenerated SignalR hub script. -->
    <script src="/signalr/hubs"></script>
</head>

<body>
    <nav class="navbar navbar-fixed-top" role="navigation">
        <div class="container">
            <i id="menu-toggle" class="fa fa-bars fa-2x sidebar-toggle"></i>
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="../">Music Manager</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="#">Search</a></li>
                        <li>@Html.ActionLink("Tracks", "Index", "Track")</li>
                        <li><a href="#">Artists</a></li>
                        <li><a href="#">Albums</a></li>
                        <li><a href="#">Playlists</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Scan", "Index", "FileScanner")</li>
                        <li><a href="#">Settings</a></li>
                        <li><a href="#">Log In</a></li>
                    </ul>
                </div>
            </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
    </nav>

    <div id="wrapper" class="">
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">@Html.ActionLink("Dashboard", "Index", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Music Management", "Index", "Music")</li>
            </ul>
        </div>
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        @RenderBody()

                    </div>
                </div>
            </div>
        </div>
        <footer>
            <p>&copy; @DateTime.Now.Year - Johnathan Cooling</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
</body>
</html>
